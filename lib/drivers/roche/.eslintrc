{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": ["lodash"],
  "parserOptions": {
    "ecmaVersion": 6,
  },
  "rules": {
    "no-plusplus": ["error", {
      "allowForLoopAfterthoughts": true
    }],
    "import/extensions": [
      "error",
      "ignorePackages"
    ],
    "arrow-parens": "warn"
  },
  "settings": {
    "lodash": 3
  }
}
